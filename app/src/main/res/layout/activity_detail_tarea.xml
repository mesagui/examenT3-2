<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    >


    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvIdDetail"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="id"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDescriptionDetail"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:text="Description"

                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imgIsDoneDetail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_playlist_add_check_24"
                android:scaleType="centerCrop" />
            //android:src="@drawable/kira_death"/>


        </LinearLayout>


        <TextView
            android:id="@+id/tvAsignedDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Asiganado" />

        <TextView
            android:id="@+id/tvDateDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Date" />


    </LinearLayout>

</LinearLayout>